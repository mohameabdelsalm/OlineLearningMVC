@using SkillUP.VMs.AdminDashboardVMs.MangerCoursesVMs
@model EditCourseVM

<!DOCTYPE html>
<html lang="en">
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Edit Courses</title>
</head>

<body class="nav-md">
	<div class="right_col" role="main">
		<div class="">
			<div class="page-title">
				<div class="title_left">
					<h3>Manage Courses</h3>
				</div>

				<div class="title_right">
					<div class="col-md-5 col-sm-5  form-group pull-right top_search">
						<div class="input-group">
							<input type="text" class="form-control" placeholder="Search for...">
							<span class="input-group-btn">
								<button class="btn btn-default" type="button">Go!</button>
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="clearfix"></div>
			<div class="row">
				<div class="col-md-12 col-sm-12 ">
					<div class="x_panel">
						<div class="x_title">
							<h2>Edit Course</h2>
							
							<div class="clearfix"></div>
						</div>


						<div class="x_content">
							<br />

							<form asp-controller="AdminDashboard" asp-action="EditCourse" method="post" enctype="multipart/form-data" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
								
								<div class="row">
									<div class="col-10">
										<input asp-for="Id" type="hidden" />
										<div class="item form-group">
											<label asp-for="Title" class="col-form-label col-md-3 col-sm-3 label-align"></label>
											<div class="col-md-6 col-sm-6 ">
												<input asp-for="Title" class="form-control ">
												<span asp-validation-for="Title" class="text-danger"></span>
											</div>
										</div>


										<div class="item form-group">
											<label asp-for="Description" class="col-form-label col-md-3 col-sm-3 label-align"></label>
											<div class="col-md-6 col-sm-6 ">
												<textarea id="tiny" asp-for="Description" class="form-control">Description</textarea>
												<span asp-validation-for="Description" class="text-danger"></span>
											</div>
										</div>



										<div class="item form-group">
											<label for="InstructorId" class="col-form-label col-md-3 col-sm-3 label-align">Select Instructor</label>
											<div class="col-md-6 col-sm-6 ">
												<select asp-for="InstructorId" class="form-control" asp-items="Model.Instructors">
												</select>
												<span asp-validation-for="InstructorId" class="text-danger"></span>

											</div>
										</div>



										<div class="item form-group">
											<label asp-for="Price" class="col-form-label col-md-3 col-sm-3 label-align"></label>
											<div class="col-md-6 col-sm-6 ">
												<input asp-for="Price" class="form-control">
												<span asp-validation-for="Price" class="text-danger"></span>
											</div>
										</div>


										<div class="item form-group">
											<label asp-for="TotalHours" class="col-form-label col-md-3 col-sm-3 label-align"></label>
											<div class="col-md-6 col-sm-6 ">
												<input asp-for="TotalHours" class="form-control">
												<span asp-validation-for="TotalHours" class="text-danger"></span>
											</div>
										</div>



										<div class="item form-group">
											<label asp-for="ImgUrl" class="col-form-label col-md-3 col-sm-3 label-align">Upload Image</label>

											<div class="col-md-6 col-sm-6 ">
												<input asp-for="ImageFile" type="file" class="form-control">
												<span asp-validation-for="ImageFile" class="text-danger"></span>
											</div>
										</div>

										<div class="item form-group">
											<label asp-for="promotionVideoUrl" class="col-form-label col-md-3 col-sm-3 label-align"></label>
											<div class="col-md-6 col-sm-6 ">
												<input asp-for="promotionVideoUrl" type="url" class="form-control">
												<span asp-validation-for="promotionVideoUrl" class="text-danger"></span>

											</div>
										</div>
										<div class="ln_solid"></div>
										<div class="item form-group">
											<div class="col-md-6 col-sm-6 offset-md-3">
												<a asp-controller="AdminDashboard" asp-action="GetAllCourses" class="btn btn-danger">Cancel</a>
												<button type="submit" class="btn btn-success">Update</button>
											</div>
										</div>

									</div>

									<div class="col-2">
										<div>
											<h4>Current image</h4>
											<img src="@Url.Content($"~/Images/Courses/{Model.ImgUrl}")" width="65%" style="border-radius:5px; border:1px solid #bb9b" />
										</div>
									</div>

								</div>

								

							</form>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>




</body>
</html>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
