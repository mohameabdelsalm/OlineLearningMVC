@using SkillUP.DataAccessLayer.Entities
@using SkillUP.VMs.AdminDashboardVMs.MangerCoursesVMs
@model CourseDetailsVM




<div class="row mt-5  px-4 px-lg-5">
    <div class="col-md-9 ps-4">
            <h1 class="mt-3">@Model.Title</h1>
            <p><strong>by @Model.InstructorName</strong></p>

        <h3 class="my-5 text-primary">Course Description:</h3>
            <p>@Html.Raw(Model.Description)</p>

        <h3 class="mt-4 text-primary">Instructor:</h3>
        <div class="instructor-box ps-4 d-flex align-items-center">
                <div>
                    <div>
                     <h5>@Model.InstructorName</h5>
                     <p>@Model.InstructorEducation</p>
                    </div>
                    <p>@Html.Raw(Model.InstructorDescription)</p>
                </div>
            </div>
    </div>

        <!-- Right Side: Video, Price, Enroll Button, and Hours -->
        <div class="col-md-3">
            <div class="course-video mb-4">
                <iframe width="100%" height="250"
                        src="@Model.promotionVideoUrl"
                        frameborder="0" allowfullscreen>
                </iframe>
            </div>

            <div class="price-box mb-4">
                <h2>@Model.Price.ToString("C")</h2>

                 @if (!Model.IsEnrolled)
            {
                <form asp-action="EnrollInCourse" asp-controller="Student" method="post">
                    <input type="hidden" name="courseId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary w-100">Enroll</button>
                </form>
            }

            else
            {
                <button type="submit" class="btn btn-secondary bg-primary w-100">
                    Go to Course
                </button>
            }
                



            </div>

            <h4>Total Hours: @Model.TotalHours</h4>
        </div>
    </div>

